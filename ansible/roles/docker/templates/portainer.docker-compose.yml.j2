version: "3.8"

services:
  portainer:
    image: portainer/portainer-ce
    container_name: portainer
    restart: always
    ports:
      - "{{ portainer_api_port }}:8000"
      - "{{ portainer_web_port }}:9443"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - portainer_data:/data

volumes:
  portainer_data:

# portainer アップデートの仕方
# docker-compose -f ~/docker/portainer/docker-compose.yml down
# docker rmi $(docker images | grep portainer/portainer-ce | awk '{print $3}')
